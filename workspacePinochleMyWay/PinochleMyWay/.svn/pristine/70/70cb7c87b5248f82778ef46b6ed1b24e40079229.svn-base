<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context=".MainActivity"
    >
    
    
    
       <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dip" android:layout_weight="1"
        android:orientation="vertical">
        <!-- <TextView android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:id="@+id/worldTextView"
            android:text="blah blah"></TextView>-->

            <ImageView
                android:id="@+id/welcome_picture"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/welcome_picture"
                android:scaleType="fitXY"
                android:src="@drawable/main_screen_bkg" />

    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        style="@android:style/ButtonBar" android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button android:text="@string/new_game_btn" android:id="@+id/new_game_main"
            android:layout_height="wrap_content" android:layout_width="fill_parent"
            android:onClick="startNewGameBtnClick"></Button>
        <Button android:text="@string/rules_btn" android:id="@+id/rules_main"
            android:layout_height="wrap_content" android:layout_width="fill_parent"
            android:onClick="rulesBtnClick"></Button>
        <Button android:text="@string/settings_btn" android:id="@+id/settings_main"
            android:layout_height="wrap_content" android:layout_width="fill_parent"
            android:onClick="settingsBtnClick"></Button>
    </LinearLayout>

</LinearLayout>