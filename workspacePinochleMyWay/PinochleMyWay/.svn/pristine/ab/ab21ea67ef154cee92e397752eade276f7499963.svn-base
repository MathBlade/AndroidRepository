<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/score_display_base"
    android:background="@drawable/timber_hard_light">
    
     
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dip" android:layout_weight="1"
        android:orientation="vertical">
    
        
    
        <LinearLayout
		         android:layout_width="wrap_content"
		         android:layout_height="fill_parent"
		         android:layout_gravity="center_horizontal" >
				<LinearLayout
				          android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    >
				    			 
		
								<GridLayout
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content" 
								    android:id="@+id/current_score_master_grid"
								    android:columnCount="1">
								    <TextView
				    			     android:layout_width="wrap_content"
				    			     android:layout_height="wrap_content"
				    			     android:text="@string/current_score_display"
				    			     android:layout_gravity="center_horizontal"
				    			     android:textColor="@color/white"
								        >
								    </TextView>
								    
								    <LinearLayout
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content">
								     
								    <TextView
				    			     android:layout_width="wrap_content"
				    			     android:layout_height="wrap_content"
				    			     android:text="@string/east_west_spelled_out"
				    			     android:textColor="@color/white"
								        >
								    </TextView>
								     <TextView
				    			     android:layout_width="wrap_content"
				    			     android:layout_height="wrap_content"
				    			     android:id="@+id/east_west_grid_score"
				    			     android:text=""
				    			     android:textColor="@color/white"
								        >
								    </TextView>
								   
								    </LinearLayout>
								    <LinearLayout
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content">
								      <TextView
				    			     android:layout_width="wrap_content"
				    			     android:layout_height="wrap_content"
				    			     android:text="@string/north_south_spelled_out"
				    			     android:textColor="@color/white"
								        >
								    </TextView>
								    <TextView
				    			     android:layout_width="wrap_content"
				    			     android:layout_height="wrap_content"
				    			     android:id="@+id/north_south_grid_score"
				    			     android:text=""
				    			     android:textColor="@color/white"
								        >
								    </TextView>
								    </LinearLayout>
								   
								    
        						</GridLayout>
        		</LinearLayout>
        </LinearLayout>
	    
         
		
	</LinearLayout>
    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black" >

        <Button
            android:id="@+id/score_dismissal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/acknowledge_score"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/black"
            android:textColor="@color/white" />
    </LinearLayout>
    
   

</LinearLayout>
